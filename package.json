{
	"name": "switch-author",
	"version": "1.0.1",
	"engines": {
		"node": ">=8.0.0"
	},
	"description": "Change author information for a series of commits in a repo",
	"main": "index.js",
	"bin": {
		"switch-author": "bin.js"
	},
	"scripts": {
		"format": "prettier --write \"src/**/*.js\"",
		"lint": "eslint --fix src/**/*.js",
		"dev": "npm run build --watch",
		"build": "rollup -c",
		"test": "mocha src/__tests__",
		"prepare": "npm run build",
		"prepublishOnly": "npm run test && npm run lint"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/itsrainingmani/switch-author.git"
	},
	"keywords": [
		"switch",
		"author",
		"git"
	],
	"author": "Manikandan Sundararajan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/itsrainingmani/switch-author/issues"
	},
	"homepage": "https://github.com/itsrainingmani/switch-author#readme",
	"dependencies": {
		"chalk": "^2.4.2",
		"execa": "^2.0.4",
		"mri": "^1.1.4"
	},
	"devDependencies": {
		"eslint": "^6.3.0",
		"eslint-config-prettier": "^6.2.0",
		"eslint-plugin-import": "^2.18.2",
		"husky": "^3.0.5",
		"lint-staged": "^9.2.5",
		"mocha": "^10.2.0",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"rollup": "^1.20.3",
		"rollup-plugin-commonjs": "^10.1.0",
		"source-map-support": "^0.5.13"
	},
	"files": [
		"index.js",
		"bin.js",
		"help.md"
	],
	"husky": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js}": [
			"eslint --fix",
			"git add"
		],
		"*.{js, json, yml, md}": [
			"prettier --write",
			"git add"
		]
	}
}
